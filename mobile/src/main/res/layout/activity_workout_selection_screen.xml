<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_workout_selection_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="2"
    tools:context="com.example.matthew.rehabrevamped.Activities.WorkoutSelectionScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/pickupcupchoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_margin="20dp"
            android:background="@android:color/holo_blue_bright"
            android:text="Pick Up Cup" />

        <Button
            android:id="@+id/twistcupchoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pickupcupchoice"
            android:layout_margin="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_green_light"
            android:text="Twist Cup" />

        <Button
            android:id="@+id/unlockchoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/twistcupchoice"
            android:layout_margin="20dp"
            android:background="@android:color/holo_red_light"
            android:text="Unlock Phone" />

        <Button
            android:id="@+id/pourwaterchoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/unlockchoice"
            android:layout_margin="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_purple"
            android:text="Pour Water" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pourwaterchoice"
            android:layout_alignStart="@+id/pourwaterchoice"
            android:layout_below="@+id/pourwaterchoice"
            android:layout_marginTop="20dp"
            android:background="?android:attr/colorPressedHighlight"
            android:text="Button"
            android:visibility="invisible" />

        <View android:id="@+id/fakeView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/fakeView"
            android:layout_alignParentRight="true"
            android:text="Right Hand"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:id="@+id/workoutchoicerighthand"
            android:fontFamily="casual" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workoutchoicelefthand"
            android:fontFamily="casual"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/fakeView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Left Hand" />

        />
    </RelativeLayout>

</RelativeLayout>
