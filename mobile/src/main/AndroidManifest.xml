<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matthew.rehabrevamped">

    <uses-permission android:name="android.permission.READ_Internal_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application android:name="android.support.multidex.MultiDexApplication">
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.WorkoutOrHistory" />
        <activity android:name=".Activities.WorkoutSelectionScreenManual" />
        <activity android:name=".Activities.WorkoutSessionActivity" />
        <activity android:name=".Activities.HistoryGraph" />
        <activity android:name=".Activities.HistoryList" />
        <activity android:name=".Activities.TestTransmission" />
        <activity android:name=".Activities.WorkoutSelectionScreenAuto"></activity>
    </application>

</manifest>